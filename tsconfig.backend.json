{
  "extends": "./tsconfig.base.json",
  "include": ["lib/**/*"],
  "exclude": ["static/**/*"],
  "compilerOptions": {
    /* Module resolution */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    /* Code generation */
    "outDir": "./out/app",
    "typeRoots": ["./typings", "./node_modules/@types"],
    /* Other options */
    "strict": true,
    "noImplicitAny": false
  }
}
