- var noscript = true
doctype html
html(lang="en")
  head
    title Shareable Link - Compiler Explorer
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
  body
    .container.mt-5
      .row
        .col-md-8.mx-auto
          .card
            .card-header
              h4.mb-0 Shareable Link Generated
            .card-body
              h5.card-title Your code has been prepared for sharing!
              
              if source
                .mb-3
                  strong Source code:
                  pre.bg-light.p-3(style="white-space: pre-wrap;") #{source}
              
              .mb-3
                strong Shareable URL:
                .input-group
                  input.form-control(type="text" value=shareableUrl readonly)
                  button.btn.btn-primary(type="button" onclick="copyToClipboard()") Copy
              
              p.card-text
                | This link will open your code in the main Compiler Explorer interface.
              
              .mt-4
                a.btn.btn-success.me-2(href=shareableUrl target="_blank") Open in Compiler Explorer
                a.btn.btn-secondary(href="/noscript") Back to NoScript Editor

    script.
      function copyToClipboard() {
        const input = document.querySelector('input');
        input.select();
        document.execCommand('copy');
        alert('Link copied to clipboard!');
      }