        .card
          .card-body
            .container
              .row
                .col-lg
                  div.filters Filter:
                    input.compiler-search(value="" placeholder="üîç Search for a compiler...")
              .row
                .col-lg
                  div.filters
                    span.label Instruction Sets:
                    span.architectures
              .row
                .col-lg
                  div.filters
                    span.label Categories:
                    span.compiler-types
              .row
                .compilers-col.col-md
